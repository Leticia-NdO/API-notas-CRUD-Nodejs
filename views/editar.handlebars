{{#with nota}}

<form action="/atualizar/{{id}}" method="POST" enctype="multipart/form-data">
    <p>Título: </p>                           
    <input type="text" name="titulo" value="{{titulo}}">
    <p>Conteúdo: </p>
    <textarea name="conteudo">{{conteudo}}</textarea>
    <div>
    <input type="file" name="imagem" accept="image/*/">
    </div>
    <button type="submit" class="btn btn-primary">Atualizar nota</button>

</form>

{{/with}}
